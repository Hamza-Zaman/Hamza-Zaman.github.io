---
import Layout from "../layouts/Layout.astro";

const skills = {
  "Analytics": [
    "SQL (T-SQL, window functions, CTEs)",
    "Power BI (DAX, Power Query)",
    "Excel (Power Query, Pivot Tables)",
    "Python (pandas, NumPy)"
  ],
  "Machine Learning": [
    "scikit-learn",
    "Feature engineering & cross-validation",
    "Time-series forecasting",
    "Transformers & Seq2Seq"
  ],
  "Professional": [
    "Stakeholder communication",
    "KPI design & measurement",
    "Data storytelling",
    "GDPR & data governance"
  ]
};

const projects = [
  {
    title: "Car Insurance Claim Prediction",
    tech: "Python, XGBoost",
    desc: "Gradient boosting model to estimate claim risk. Feature engineering improved premium accuracy and profitability metrics.",
    link: "/car_insurance",
    notebook: "/notebook/car_insurance.html"
  },
  {
    title: "London Fire Brigade Analytics",
    tech: "Python, scikit-learn",
    desc: "Classification and clustering to flag false alarms. Insights for deployment planning and resource allocation.",
    link: "/lfb",
    notebook: "/notebook/lfb.html"
  },
  {
    title: "Osteoporosis Fracture-Risk Prediction",
    tech: "Python, scikit-learn",
    desc: "Benchmarked KNN, Random Forest, Logistic Regression, and SVM. KNN achieved 88% accuracy with BMD and Age as top predictors.",
    link: "/ost",
    notebook: "/notebook/osteoporosis.html"
  },
  {
    title: "NLP Lip-Reading (Master's Thesis)",
    tech: "TensorFlow, Seq2Seq, GRU-attention",
    desc: "Trained on 45k LRS2 sentences using phoneme-viseme features. Achieved ~3% WER and 0.92 BLEU score.",
    link: "/thesis",
    notebook: "/notebook/thesis.html"
  }
];
---

<Layout title="Hamza Zaman â€” Data Analyst" description="Data Analyst with MSc Data Science based in London. Python, SQL, Power BI, ML/NLP.">

  <!-- Hero -->
  <section class="hero">
    <div class="hero-label">Data Analyst</div>
    <h1>Hamza Zaman</h1>
    <p class="hero-subtitle">
      MSc Data Science graduate based in London.
      Building analytics solutions with Python, SQL, and Power BI.
    </p>
    <div class="hero-links">
      <a href="mailto:hamzazaman04@gmail.com">hamzazaman04@gmail.com</a>
      <a href="https://www.linkedin.com/in/hamza-zaman-data/" target="_blank" rel="noopener">LinkedIn</a>
      <a href="https://github.com/hamza-zaman" target="_blank" rel="noopener">GitHub</a>
    </div>
  </section>

  <!-- Info -->
  <section class="section">
    <div class="info-grid">
      <div class="info-item">
        <div class="info-label">Location</div>
        <div class="info-value">London, UK</div>
      </div>
      <div class="info-item">
        <div class="info-label">Work Status</div>
        <div class="info-value">Eligible to work in UK</div>
      </div>
      <div class="info-item">
        <div class="info-label">Education</div>
        <div class="info-value">MSc Data Science</div>
      </div>
      <div class="info-item">
        <div class="info-label">Open To</div>
        <div class="info-value">Relocation</div>
      </div>
    </div>
  </section>

  <!-- Skills -->
  <section class="section">
    <div class="section-header">
      <div class="section-label">Expertise</div>
      <h2 class="section-title">Skills</h2>
    </div>
    <div class="skills-grid">
      {Object.entries(skills).map(([group, items]) => (
        <div class="skill-group">
          <h3>{group}</h3>
          <ul class="skill-list">
            {items.map(item => <li>{item}</li>)}
          </ul>
        </div>
      ))}
    </div>
  </section>

  <!-- Projects -->
  <section class="section" id="projects">
    <div class="section-header">
      <div class="section-label">Portfolio</div>
      <h2 class="section-title">Projects</h2>
    </div>
    <div class="projects-list">
      {projects.map(project => (
        <article class="project">
          <div class="project-content">
            <h3 class="project-title">{project.title}</h3>
            <div class="project-tech">{project.tech}</div>
            <p class="project-desc">{project.desc}</p>
          </div>
          <div class="project-links">
            <a class="project-link primary" href={project.link}>View</a>
            <a class="project-link" href={project.notebook} target="_blank" rel="noopener">Notebook</a>
          </div>
        </article>
      ))}
    </div>
  </section>

</Layout>
