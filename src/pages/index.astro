---
import Layout from "../layouts/Layout.astro";

const projects = [
  {
    title: "Customer Churn Prediction",
    summary: "XGBoost model to flag at-risk customers; AUC 0.87 and 7% retention lift.",
    tech: ["Python", "scikit-learn", "XGBoost"],
    href: "/projects/churn-model",
    img: "https://picsum.photos/seed/churn/800/400",
    code: "https://github.com/HamzaZaman/churn-model"
  },
  {
    title: "Power BI Sales Insights",
    summary: "Automated reporting cut weekly work from 3h to 15m.",
    tech: ["Power BI", "DAX", "SQL"],
    href: "/projects/power-bi-sales",
    img: "https://picsum.photos/seed/pbi/800/400",
    code: "https://github.com/HamzaZaman/powerbi-sales"
  }
];
---
<Layout>
  <section class="hero">
    <h1>Hi, Iâ€™m Hamza Zaman.</h1>
    <p class="sub">Data Analyst / Data Scientist. I turn messy data into clear decisions.</p>
    <div class="ctas">
      <a class="button" href="#projects">See Projects</a>
      <a class="button secondary" href="mailto:you@example.com">Contact</a>
    </div>
  </section>

  <h2 id="projects" class="section-title">Projects</h2>
  <div class="grid">
    {projects.map(p => (
      <article class="card">
        <a href={p.href}><img class="thumb" src={p.img} alt={p.title} loading="lazy" /></a>
        <h3><a href={p.href} style="text-decoration:none; color:inherit">{p.title}</a></h3>
        <p>{p.summary}</p>
        <div class="badges">{p.tech.map(t => <span class="badge">{t}</span>)}</div>
        <div class="ctas">
          <a class="button" href={p.href}>Case Study</a>
          <a class="button secondary" href={p.code} target="_blank" rel="noopener">Code</a>
        </div>
      </article>
    ))}
  </div>
</Layout>
