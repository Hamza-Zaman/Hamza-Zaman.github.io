---
const {
  title = "Hamza Zaman — Data Science Portfolio",
  description = "Projects in Python, SQL, and Power BI with ML/NLP/LLMs"
} = Astro.props;
---
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />

    <title>{title}</title>
    <meta name="description" content={description} />
    <meta name="theme-color" content="#f7fafc" />
    <meta name="color-scheme" content="light" />

    <!-- Open Graph -->
    <meta property="og:type" content="website" />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />

    <!-- Fonts (light, modern) -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link
      href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700;800&family=Plus+Jakarta+Sans:wght@700;800&display=swap"
      rel="stylesheet"
    >

    <!-- Site styles (served from /public) -->
    <link rel="stylesheet" href="/styles.css" />
  </head>
  <body>
    <header class="nav">
      <div class="nav-inner">
        <a class="brand" href="/">Hamza Zaman</a>
        <nav style="display:flex; gap:16px;">
          <a href="/#projects">Projects</a>
          <a href="/about">Resume</a>
          <a href="mailto:hamzazaman04@gmail.com">Contact</a>
        </nav>
      </div>
    </header>

    <main class="container">
      <slot />
      <footer class="footer">
        <div>© <span id="y"></span> Hamza Zaman</div>
        <div class="links">
          <a href="mailto:hamzazaman04@gmail.com">Email</a>
          <a href="https://www.linkedin.com/in/hamza-zaman-data/" target="_blank" rel="noopener">LinkedIn</a>
          <a href="https://github.com/hamza-zaman" target="_blank" rel="noopener">GitHub</a>
        </div>
      </footer>
    </main>

    <script>
      document.getElementById('y').textContent = new Date().getFullYear();
    </script>
  </body>
</html>
